<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Daily_Report.IntroPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#ebd831" Padding="24" CornerRadius="0">
                <Label Text="Welcome to Daily Report App!" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
            </Frame>
            <Label Text="Make a note of the daily construction status" FontSize="Title" Padding="30,10,30,10"/>
            <Label Text="You will count everything you need!" FontSize="16" Padding="30,0,30,0"/>
            <Label FontSize="16" Padding="30,24,30,0">
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Button BackgroundColor="#f7a71b" Text="Next" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>